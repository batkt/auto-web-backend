{
    "compilerOptions": {
      "target": "es2017",
      "module": "Node16",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types", "./src/@types"],
      "skipLibCheck": true,
      "moduleResolution": "node16"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  } 